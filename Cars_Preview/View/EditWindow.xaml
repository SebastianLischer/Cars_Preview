                <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Width="200" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Name" Width="200" Binding="{Binding CarName}"/>
                    <DataGridTextColumn Header="Description" Width="*" Binding="{Binding Description}"/>
                    <DataGridTextColumn Header="BuildYear" Width="200" Binding="{Binding BuildYear}"/>
                    <DataGridTextColumn Header="Price" Width="100" Binding="{Binding Price}"/>
                    <DataGridTextColumn Header="Color" Width="200" Binding="{Binding Color}"/>
                </DataGrid.Columns>
            </DataGrid>-->
            
</Window>
