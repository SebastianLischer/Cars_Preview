<Window x:Class="Cars_Preview.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cars_Preview.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--<DataGrid ItemsSource="{Binding Cars, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            --><!--<EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>--><!--
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="100" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Description" Width="*" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Price" Width="100" Binding="{Binding Price}"/>
            </DataGrid.Columns>
        </DataGrid>-->
        <DataGrid CanUserAddRows="True" CanUserDeleteRows="True" Margin="10"   ClipboardCopyMode="IncludeHeader" 
                                            IsSynchronizedWithCurrentItem="True" RowDetailsVisibilityMode="VisibleWhenSelected" EnableRowVirtualization="True" 
                                            AutoGenerateColumns="False" ItemsSource="{Binding CarsCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
            <DataGrid.Columns>
                <DataGridTextColumn  x:Name="Name" Binding="{Binding Name}" Header="Name" Width="Auto"/>
                <DataGridTextColumn Header="Description" Width="*" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Price" Width="100" Binding="{Binding Price}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
